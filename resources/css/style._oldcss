:root {
  --white-color: antiquewhite;
  --green-color: rgba(17, 222, 37, 0);
  --darkblue-var: rgba(5, 6, 104, 0);
  --darkblue-color: #00008b;
}

* {
  box-sizing: border-box;
}

html {
  font-size: 100%;
}

body {
  /* position: fixed; */
  font-family: "Roboto Mono", monospace;
  font-size: 1rem;
  font-weight: 400;
  color: var(--white-color);
  background-color: var(--darkblue-color);
  background-image: linear-gradient(
      120deg,
      rgba(58, 58, 158, 0.8),
      rgba(136, 136, 206, 0.7)
    ),
    url(../pics/survey-form-background.jpeg);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

h1 {
  font-weight: 400;
}

label {
  display: flex;
  align-items: center;
}

.container {
  display: flex;
  width: 800px;
}

#survey-form {
  background-color: var(--darkblue-var);
}
